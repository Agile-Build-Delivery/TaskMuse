<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vector"
    tools:context=".ui.fragment.get_started.GetStartedFragment">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="279dp"
        android:layout_height="473dp"
        android:baselineAligned="false"
        android:contentDescription="@string/getStarted"
        android:src="@drawable/logo_task_muse_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771" />

    <Button
        android:id="@+id/getStartedButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_margin="10sp"
        android:text="@string/getStarted"
        android:textSize="21sp"
        android:textColor="@color/md_theme_light_onPrimary"
        app:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/md_theme_light_onPrimary"
        app:rippleColor="?attr/colorOnSurface"
        app:shapeAppearance="?attr/shapeAppearanceSmallComponent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.898" />


</androidx.constraintlayout.widget.ConstraintLayout>